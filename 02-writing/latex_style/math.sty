%% Brackets
\newcommand{\bp}[1]{\left( #1 \right)} % Parentheses
\newcommand{\bs}[1]{\left[ #1 \right]} % Square brackets:
\newcommand{\bc}[1]{\left\lbrace #1 \right\rbrace} % Curly brackets
\newcommand{\abs}[1]{\left\lvert #1 \right\rvert} % Absolute value

% function
\newcommand{\of}[1]{\bp{#1}} % function of #

% fraction
\newcommand{\frp}[2]{\bp{\frac{#1}{#2}}} % fraction with Parentheses
\newcommand{\fr}[2]{\frac{#1}{#2}} % fraction

% log and ln
\newcommand{\lnp}[1]{\ln{\bp{#1}}} % ln(x)
\newcommand{\logp}[1]{\log{\bp{#1}}} % log()

%% Derivatives
\newcommand{\pd}[2]{\frac{\partial #1}{\partial #2}} % partial derivate
\newcommand{\od}[2]{\frac{d #1}{d #2}} % ordinary derivate

%% Accents
\newcommand{\sh}[1]{\overline{#1}} % straight line on top
\newcommand{\hh}[1]{\widehat{#1}} % house hat
\newcommand{\wh}[1]{\widetilde{#1}} % wigeley hat

